include button
mixin card(img,title,drive,power,mileage,year,price)
    .card 
        img.card-img(src=`./img/${img}`,  loading="lazy", alt=title)
        .card-title=title
        ul.card-list 
            li 
                img(src="./img/drive-unit.svg",  loading="lazy", alt="drive unit") 
                |Привод
                span=drive
            li 
                img(src="./img/power-reserve.svg",  loading="lazy", alt="power reserve") 
                |Запас хода
                span=power
            li 
                img(src="./img/mileage.svg",  loading="lazy", alt="mileage") 
                |Пробег
                span=mileage
            li 
                img(src="./img/year.svg",  loading="lazy", alt="year") 
                |Год выпуска
                span=year
            li 
                img(src="./img/price.svg",  loading="lazy", alt="price") 
                |Цена
                span=price
        +button('Подробнее','about-car.html','')
        